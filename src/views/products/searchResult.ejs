<%- include('../partials/head') %> 
<%- include('../partials/header') %> 
<body class="search-results">
    <div class="mobile">
        <h2>Las busquedas asociadas con "<%= query %>" son las siguientes </h2>
        <% results.forEach(product => { %>
            <div class="card">
                <img src="/images/<%= product.image %> " alt="Imagen del/l@s <%= product.name %> " title="Imagen del/l@s <%= product.name %> ">
                <h3 class="name"><%= product.name %></h3>
                <p>
                    <% if (product.wayToSell == 1) { %>
                        $ <%= product.unit %> 
                    <% } else { %>
                        $ <%= product.kilo %> 
                    <% }%> 
                </p>
                <a href="/products/detail/<%= product.id %>"></a>
            </div>
        <% }) %>
    </div>
    <div class="desktop">
        <ul class="search">
            <% results.forEach(product => { %>
                <li class='card'>
                        <div class='left'>
                            <img src="/images/<%= product.image %>" alt="Imagen del/l@s <%= product.name %>">
                        </div>
                        <div class='center'>
                            <h3><%= product.name %></h3>
                            <p>
                                <% if (product.wayToSell == 1) { %>
                                    <%= product.unit %> 
                                <% } else { %>
                                    <%= product.kilo %> 
                                <% }%> 
                            </p>
                        </div>
                        <div class='right'>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</body>

<%- include('../partials/footer') %> 